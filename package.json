{
  "name": "personal-site",
  "version": "0.0.0-development",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fwesss/personal-site.git"
  },
  "author": "Westley Feller <feller.westley@gmail.com>",
  "scripts": {
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "dev": "next dev",
    "build": "yarn run build:sanity && pwd && npm run build:web",
    "build:sanity": "cd studio && sanity install && sanity build ../public/studio -y && cd ..",
    "start:sanity": "cp .env.local ./studio/.env.development && cd studio && sanity start",
    "build:web": "next build",
    "start:web": "next start",
    "commit": "cz",
    "prepare": "husky install",
    "check-types": "tsc --pretty --noEmit",
    "format": "yarn run prettier -- --write",
    "lint": "eslint_d --ignore-path .eslintignore \"**/*.+(js|jsx|json|ts|tsx)\" --fix",
    "prettier": "prettier --ignore-path .prettierignore \"**/*.+(js|json|ts|tsx|css|html|md)\" --write",
    "pretest:e2e:run": "yarn run build",
    "test:e2e:run": "start-server-and-test start http://localhost:3000 cy:run",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 cy:open",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:dev\"",
    "validate": "yarn run check-types && yarn run build",
    "postinstall": "lerna bootstrap -- --no-optional"
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "yarn run lint",
      "yarn run format",
      "git add -A"
    ],
    "*.+(md|css|html)": [
      "yarn run format",
      "git add -A"
    ],
    "package.json": [
      "sort-package-json",
      "git add -A"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@asbjorn/eslint-plugin-groq": "^1.0.0",
    "@chakra-ui/icons": "^1.0.11",
    "@chakra-ui/react": "^1.5.2",
    "@chakra-ui/theme-tools": "^1.1.6",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.3.0",
    "@mapbox/togeojson": "^0.16.0",
    "@sanity/block-content-to-react": "^2.0.7",
    "@sentry/browser": "^6.2.5",
    "@sentry/integrations": "^6.2.5",
    "@sentry/node": "^6.2.5",
    "@sentry/tracing": "^6.3.0",
    "@sentry/webpack-plugin": "^1.15.0",
    "@testing-library/cypress": "^7.0.6",
    "d3": "^6.7.0",
    "framer-motion": "^4.1.5",
    "geojson": "^0.5.0",
    "groq": "^0.142.0",
    "mapbox-gl": "^2.3.0",
    "next": "^11.0.0",
    "next-pwa": "^5.2.21",
    "next-sanity": "^0.1.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "sanity-codegen": "^0.9.3",
    "suncalc": "^1.8.0",
    "use-resize-observer": "^7.0.0",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@sanity/cli": "^2.8.0",
    "@types/css": "^0.0.31",
    "@types/d3": "^6.3.0",
    "@types/geojson": "^7946.0.7",
    "@types/mapbox-gl": "^2.3.0",
    "@types/react": "^17.0.3",
    "@types/suncalc": "^1.8.0",
    "@types/use-resize-observer": "^6.0.0",
    "@types/xmldom": "^0.1.30",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cypress": "^7.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-next": "^11.0.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-root-import": "^1.0.4",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "sort-package-json": "^1.49.0",
    "start-server-and-test": "^1.12.1",
    "typescript": "^4.2.4"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  }
}
